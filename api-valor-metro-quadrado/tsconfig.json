{
  "compilerOptions": {
    "target": "ESNext",                                
    "module": "CommonJS",                           
    "strict": true,                                 
    "baseUrl": "./src",
    "outDir": "./dist",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },                                 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true  
  }
}
