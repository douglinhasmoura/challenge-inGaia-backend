{
  "compilerOptions": {
    "target": "ES2015",                                
    "module": "CommonJS",                           
    "strict": true,                                 
    "baseUrl": "./src",
    "outDir": "../../api-01/dist",     
    "allowJs": true,                        
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },                                 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true  
  }
}
