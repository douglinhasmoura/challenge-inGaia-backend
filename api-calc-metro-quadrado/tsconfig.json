{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "strict": true,                                 
    "baseUrl": "./src",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },                                 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true  
  }
}
